<% if user_signed_in? %>
  <li class="active-user">
    <small>Hello, <%= link_to current_user.name, current_user, class: "highlight" %></small>
  </li>
  <li class="active-user-signout">
    <small><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></small>
  </li>
<% else %>
  <li class="sign-callout">
    <%= link_to "Sign In", new_user_session_path, class: "highlight" %> 
    or
    <%= link_to "Sign Up!", new_user_registration_path, class: "highlight" %> 
  </li>
<% end %>